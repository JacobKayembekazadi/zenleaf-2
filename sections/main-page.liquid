<section class="py-20">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
    {%- if page.title != blank -%}
      <header class="mb-10">
        <h1 class="font-serif text-3xl sm:text-4xl lg:text-5xl tracking-tight text-[#2B2B2B]">
          {{ page.title }}
        </h1>
        {%- if page.description != blank -%}
          <p class="mt-3 text-lg text-[#2B2B2B]/70">
            {{ page.description }}
          </p>
        {%- endif -%}
      </header>
    {%- endif -%}

    <div class="prose prose-lg max-w-none text-[#2B2B2B]/80">
      {{ page.content }}
    </div>
  </div>
</section>

<style>
  .prose {
    color: rgb(43 43 43 / 0.8);
  }
  .prose h2 {
    font-family: Georgia, serif;
    font-size: 1.875rem;
    line-height: 2.25rem;
    font-weight: 600;
    color: rgb(43 43 43);
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .prose h3 {
    font-family: Georgia, serif;
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 600;
    color: rgb(43 43 43);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .prose p {
    margin-top: 1rem;
    margin-bottom: 1rem;
    line-height: 1.75rem;
  }
  .prose ul, .prose ol {
    margin-top: 1rem;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  .prose li {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .prose a {
    color: rgb(47 62 52);
    text-decoration: underline;
  }
  .prose a:hover {
    color: rgb(37 52 43);
  }
  .prose img {
    margin-top: 2rem;
    margin-bottom: 2rem;
    border-radius: 0.5rem;
  }
</style>

{% schema %}
{
  "name": "Page",
  "settings": []
}
{% endschema %}


<section aria-labelledby="reviews-title" class="py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 id="reviews-title" class="text-center font-serif text-3xl tracking-tight">
      {{ section.settings.heading | default: "What our members say" }}
    </h2>
    <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {%- for block in section.blocks -%}
        <figure class="rounded-xl bg-white p-6 ring-1 ring-black/5 shadow-[0_2px_12px_rgba(47,62,52,0.08)]">
          {% render 'star-rating', rating: block.settings.rating %}
          <blockquote class="mt-3 text-[#2B2B2B]/80">"{{ block.settings.comment }}"</blockquote>
          <figcaption class="mt-4 text-sm font-medium text-[#2F3E34]">{{ block.settings.name }}</figcaption>
        </figure>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What our members say"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Amelia R."
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "comment",
          "label": "Comment",
          "default": "The Tranquility Kit turned my evenings into a calming ritual. Gorgeous packaging and thoughtful curation."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews",

<section id="rituals" aria-labelledby="rituals-title" class="py-16 bg-[#E9E4D8]">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 grid lg:grid-cols-3 gap-10 items-center">
    <div class="lg:col-span-2">
      <h2 id="rituals-title" class="font-serif text-3xl tracking-tight">
        {{ section.settings.heading | default: "Tea & Breath — a 7‑day mini series" }}
      </h2>
      <p class="mt-3 text-[#2B2B2B]/80 max-w-2xl">
        {{ section.settings.description | default: "Short, guided practices to anchor your day. Choose Morning Focus, Afternoon Reset, or Evening Unwind and follow along with gentle audio prompts." }}
      </p>
      <div class="mt-6 flex gap-3">
        {%- if section.settings.primary_link != blank -%}
          <a href="{{ section.settings.primary_link }}" class="inline-flex items-center rounded-md bg-[#9BB7A7] px-5 py-2.5 text-sm font-medium text-[#2F3E34] hover:bg-[#8FAD9D]">
            {{ section.settings.primary_text | default: "Browse rituals" }}
          </a>
        {%- endif -%}
        {%- if section.settings.secondary_link != blank -%}
          <a href="{{ section.settings.secondary_link }}" class="inline-flex items-center rounded-md border border-[#2F3E34] px-5 py-2.5 text-sm font-medium text-[#2F3E34] hover:bg-[#2F3E34]/5">
            {{ section.settings.secondary_text | default: "Play a sample" }}
          </a>
        {%- endif -%}
      </div>
    </div>
    <div class="order-first lg:order-last">
      <div class="aspect-square overflow-hidden rounded-xl ring-1 ring-black/5 bg-white shadow-[0_8px_28px_rgba(47,62,52,0.12)]">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1974 }}"
            alt="{{ section.settings.image.alt | escape }}"
            class="h-full w-full object-cover"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            loading="lazy"
          >
        {%- else -%}
          <img
            src="https://images.unsplash.com/photo-1516575150278-77136aed6920?q=80&w=1974&auto=format&fit=crop"
            alt="A serene cup of tea beside a linen cloth and wooden tray"
            class="h-full w-full object-cover"
            loading="lazy"
          >
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rituals Teaser",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tea & Breath — a 7‑day mini series"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Short, guided practices to anchor your day. Choose Morning Focus, Afternoon Reset, or Evening Unwind and follow along with gentle audio prompts."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "primary_text",
      "label": "Primary button text",
      "default": "Browse rituals"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link"
    },
    {
      "type": "text",
      "id": "secondary_text",
      "label": "Secondary button text",
      "default": "Play a sample"
    }
  ],
  "presets": [
    {
      "name": "Rituals Teaser"
    }
  ]
}
{% endschema %}


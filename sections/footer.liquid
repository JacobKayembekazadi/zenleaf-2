<footer class="border-t border-black/5">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10 grid gap-8 md:grid-cols-4">
    <div>
      <div class="flex items-center gap-2">
        {%- if section.settings.logo != blank -%}
          <img
            src="{{ section.settings.logo | image_url: width: 36 }}"
            alt="{{ shop.name }}"
            width="36"
            height="36"
            loading="lazy"
          >
        {%- else -%}
          <span class="inline-flex h-9 w-9 items-center justify-center rounded-md bg-[#9BB7A7] text-[#2F3E34]">
            {% render 'icon-leaf' %}
          </span>
        {%- endif -%}
        <span class="font-serif text-xl">{{ shop.name }}</span>
      </div>
      <p class="mt-3 text-sm text-[#2B2B2B]/70 max-w-xs">
        {{ section.settings.description | default: "Curated small‑farm teas and mindful rituals delivered monthly." }}
      </p>
    </div>

    {%- for block in section.blocks -%}
      <div>
        <h3 class="text-sm font-semibold">{{ block.settings.title }}</h3>
        <ul class="mt-3 space-y-2 text-sm">
          {%- for link in block.settings.menu.links -%}
            {%- liquid
              assign link_url = link.url
              if template.name == 'index' and link.url contains '#'
                assign link_url = link.url
              elsif template.name == 'index'
                case link.title
                  when 'The Tranquility Kit'
                    assign link_url = '#tiers'
                  when 'Ritual Library'
                    assign link_url = '#rituals'
                  when 'Farm Stories'
                    assign link_url = '#farms'
                  when 'About'
                    assign link_url = '#about'
                  else
                    assign link_url = link.url
                endcase
              endif
            -%}
            <li>
              <a class="hover:text-[#2F3E34]" href="{{ link_url }}">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    {%- endfor -%}
  </div>
  <div class="border-t border-black/5 py-6 text-center text-xs text-[#2B2B2B]/60">
    © {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Curated small‑farm teas and mindful rituals delivered monthly."
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Shop"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "menu",
          "settings": {
            "title": "Shop"
          }
        },
        {
          "type": "menu",
          "settings": {
            "title": "Learn"
          }
        },
        {
          "type": "menu",
          "settings": {
            "title": "Support"
          }
        }
      ]
    }
  ]
}
{% endschema %}


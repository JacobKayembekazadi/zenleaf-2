<section class="py-16 {% if section.settings.background == 'beige' %}bg-[#F6F3EE]{% elsif section.settings.background == 'tan' %}bg-[#E9E4D8]{% else %}bg-white{% endif %}">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
    {%- if section.settings.heading != blank -%}
      <h2 class="font-serif text-3xl tracking-tight text-center mb-8">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.settings.image != blank -%}
      <div class="mb-8 overflow-hidden rounded-xl">
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          alt="{{ section.settings.image.alt | escape }}"
          class="w-full h-auto"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
          loading="lazy"
        >
      </div>
    {%- endif -%}

    {%- if section.settings.content != blank -%}
      <div class="prose prose-lg max-w-none text-[#2B2B2B]/80 {% if section.settings.text_alignment == 'center' %}text-center mx-auto{% endif %}">
        {{ section.settings.content }}
      </div>
    {%- endif -%}

    {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
      <div class="mt-8 {% if section.settings.text_alignment == 'center' %}text-center{% endif %}">
        <a
          href="{{ section.settings.button_link }}"
          class="inline-flex items-center rounded-md bg-[#9BB7A7] px-6 py-3 text-sm font-medium text-[#2F3E34] shadow-sm hover:bg-[#8FAD9D] focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#9BB7A7]"
        >
          {{ section.settings.button_label }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Product Rich Text",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Story Behind This Tea"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Add detailed product information, origin story, or brewing tips here.</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "background",
      "label": "Background color",
      "options": [
        {
          "value": "white",
          "label": "White"
        },
        {
          "value": "beige",
          "label": "Beige"
        },
        {
          "value": "tan",
          "label": "Tan"
        }
      ],
      "default": "white"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Product Rich Text",
      "settings": {
        "heading": "The Story Behind This Tea",
        "content": "<p>Each of our teas is carefully sourced from small, sustainable farms committed to quality and environmental stewardship.</p>"
      }
    }
  ]
}
{% endschema %}


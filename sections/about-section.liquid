<section id="about" aria-labelledby="about-title" class="py-20">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 id="about-title" class="font-serif text-3xl sm:text-4xl tracking-tight">
        {{ section.settings.heading | default: "About ZenLeaf" }}
      </h2>
      <div class="mt-6 prose prose-lg max-w-none text-[#2B2B2B]/80 text-left">
        {{ section.settings.content | default: "<p>We're on a mission to make mindfulness accessible through the simple ritual of tea. Each box is carefully curated to bring you closer to calm, one cup at a time.</p>" }}
      </div>
    </div>
  </div>
</section>

<style>
  .prose p {
    margin-top: 1rem;
    margin-bottom: 1rem;
    line-height: 1.75rem;
  }
</style>

{% schema %}
{
  "name": "About Section",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About ZenLeaf"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>We're on a mission to make mindfulness accessible through the simple ritual of tea. Each box is carefully curated to bring you closer to calm, one cup at a time.</p>"
    }
  ],
  "presets": [
    {
      "name": "About Section"
    }
  ]
}
{% endschema %}

